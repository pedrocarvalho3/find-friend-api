generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum EnergyLevel {
  ONE
  TWO
  THREE
  FOUR
  FIVE
}


enum Environment {
  SMALL_SPACE    
  MEDIUM_SPACE   
  LARGE_SPACE    
}

model Org {
  id          String @id @default(uuid())
  name        String
  author_name String
  email       String @unique
  whatsapp    String
  password_hash    String

  cep          String
  state        String
  city         String
  neighborhood String
  street       String

  latitude  Decimal
  longitude Decimal

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id           String @id @default(uuid())
  name         String
  about        String
  age          String
  size         PetSize 
  energy_level EnergyLevel
  environment  Environment
  org_id       String

  org Org @relation(fields: [org_id], references: [id])

  @@map("pets")
}
